@using Microsoft.AspNetCore.Identity
@using FilmFabriken.Areas.Identity.Pages.Account
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



@if (User.Identity.IsAuthenticated)
{
    <form method="post" asp-area="Identity" class="form-inline" asp-route-returnUrl="/Index" asp-page="/Account/Logout">
        <span>Inloggad som <strong>@User.Identity.Name</strong></span>
        <button class="ml-2 btn-link btn" type="submit">Logga ut</button>
    </form>
}
else
{
    <a asp-area="Identity" asp-page="/Account/Login"><u>Logga in</u></a>
}
